div#add(ng-controller='AddProjectCtrl')
  form(method="post", name='addForm', novalidate)
    fieldset
      legend Add a project to the site

      label(for="type") Project Type:
      select#type(name="projectType", ng-model="addFormData.projectType", required)
        option(value="0", ng-selected='true') Select a project type
        option(value="1") Theatrical
        option(value="2") Home Entertainment
        option(value="3") Interactive Gaming

      label(for="title") Project Title:
      input#title(type='text', name="projectTitle", autocomplete="off", tabindex="1", ng-model="addFormData.title", required)

      label(for="clientName") Client:
      input#clientName(type='text', name="clientName", maxlength="50", autocomplete="off", tabindex="2", ng-model="addFormData.client", required)

      div#fuckthis
        label(for="main-image") Main Image:
        input#main-image(type='file', name="mainImage", size="50", maxlength="100", AUTOCOMPLETE = "OFF", ng-model="addFormData.mainImg", ng-valid-file, required)

        label(for="full-image") Full Image:
        input#full-image(type='file', name="fullImage", size="50", maxlength="100", AUTOCOMPLETE = "OFF", ng-model="addFormData.fullImg", ng-valid-file, required)
      
      label(for="scope") Project Scope:
      select#scope(name="scope", ng-model="addFormData.scope", required)
        option(value="0", ng-selected='true') Select a scope
        option(value="1") Creative
        option(value="2") Creative & Production
        option(value="3") Production Design
        option(value="4") Creative & Production Design
        option(value="5") Production

      label(for="description") Project Description:
      textarea#description(rows="4", maxlength="255", type="text", name="description", tabindex="3", AUTOCOMPLETE="OFF", ng-model="addFormData.description", required)

      label.checkbox-label(for="video") Is this a video project?
      input(type="checkbox", name="video", ng-model="addFormData.video")
      
      br

      button#submitForm(ng-click="processForm()", ng-disabled="addForm.$invalid || isUnchanged(user)") Add Project
      button#clear(ng-click="clearForm()") Clear Form
      p(ng-class="{ true: 'errorListing', false: ''}[isError]") {{ error }}

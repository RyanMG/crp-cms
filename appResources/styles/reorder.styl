.wrapper-box
  margin-top 15px
  width 520px
  min-height 100px
  background-color transparent
  border 1px solid #aaa
  padding 0 20px

  h1
    color #888
    padding 0 5px 0 5px
    margin -18px 0 0 140px
    background-color #ddd
    width 260px
    font-weight 500
    font-size 25px
    letter-spacing 1px
    text-align center

  ul.reorder-listing
    margin 0
    padding 20px 0 0 0

    li.reorder-item
      float left
      height 80px
      width 93px
      padding 10px
      margin-right 20px
      margin-bottom 20px
      list-style none
      background-color #ccc
      border 1px solid #888
      display inline-block
      cursor pointer
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;

      p
        margin 0 0 5px 0
        font-size 10px
        color #555

    li.reorder-item:nth-child(4n)
      margin-right 0

  .reorder-buttons
    clear both
    margin-top 10px

    button
        width 130px
        height 30px
        margin 10px 10px 20px 0
        background-color #ccc
        border 1px solid #aaa
        border-radius 3px
        font-size 14px
        color #666

      button:hover
        background-color #ddd

      button:focus
        outline none


.wrapper-box:after
  content ""
  display block
  clear both

